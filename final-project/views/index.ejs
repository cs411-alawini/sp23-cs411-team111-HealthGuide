              <input type="text" class="form-control col-lg-9"  placeholder="Enter Password" id="password" name = "password">
              
              <button class = "button1" type="submit">Login</button>
            </div>  
            
        </form>
        <form action="signin">
            <div class = "container"> 
            <button type="submit" class = "button2">Sign Up</button>
            </div>
        </form>
